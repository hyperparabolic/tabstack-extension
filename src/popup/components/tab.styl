.tab-even
    display: flex
    flex-direction: row
    background-color: #DDDDDD

.tab-odd
    display: flex
    flex-direction: row
    background-color: white

.tab-favicon
    display: flex
    flex-direction: column
    justify-content: center

.favicon
    width: 25px
    height: 25px

.tab-info
    padding: 0.5em
    justify-content: flex-start
    flex-grow: 1
    flex-shrink: 1

h2
    padding: 0
    margin: 0
    text-align: left
    font-size: 20px

.tab-delete
    display: flex
    flex-direction: column
    justify-content: flex-start

.delete-button
    padding: 0px 5px
    border-radius: 50%
    background-color: Transparent
    background-repeat: no-repeat
    border: none
    outline: none
    overflow: hidden
    color: #999999
